<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.IconsDescActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/sp16">

        <ImageButton
            android:id="@+id/btnBack"
            style="@style/IconsMode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ICON DESCRIPTION"
            android:textSize="@dimen/sp20"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/btnBack"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="@dimen/sp6"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sp14"
        android:orientation="vertical"
        android:padding="@dimen/sp16">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sp20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/IconsMode"
                android:layout_width="@dimen/sp28"
                android:layout_height="@dimen/sp28"
                android:layout_marginEnd="@dimen/sp10"
                android:src="@drawable/ic_temperature" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Temperature Unit"
                android:textSize="@dimen/sp18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sp20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/IconsMode"
                android:layout_width="@dimen/sp28"
                android:layout_height="@dimen/sp28"
                android:layout_marginEnd="@dimen/sp10"
                android:src="@drawable/ic_wind" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wind Unit"
                android:textSize="@dimen/sp18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sp20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/IconsMode"
                android:layout_width="@dimen/sp28"
                android:layout_height="@dimen/sp28"
                android:layout_marginEnd="@dimen/sp10"
                android:src="@drawable/ic_pressure" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pressure Unit"
                android:textSize="@dimen/sp18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sp20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/IconsMode"
                android:layout_width="@dimen/sp28"
                android:layout_height="@dimen/sp28"
                android:layout_marginEnd="@dimen/sp10"
                android:src="@drawable/ic_precipitation" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Precipitation"
                android:textSize="@dimen/sp18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sp20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/IconsMode"
                android:layout_width="@dimen/sp28"
                android:layout_height="@dimen/sp28"
                android:layout_marginEnd="@dimen/sp10"
                android:src="@drawable/ic_visibility" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Visibility Unity"
                android:textSize="@dimen/sp18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sp20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/IconsMode"
                android:layout_width="@dimen/sp28"
                android:layout_height="@dimen/sp28"
                android:layout_marginEnd="@dimen/sp10"
                android:src="@drawable/ic_time" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time Format"
                android:textSize="@dimen/sp16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sp20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/IconsMode"
                android:layout_width="@dimen/sp28"
                android:layout_height="@dimen/sp28"
                android:layout_marginEnd="@dimen/sp10"
                android:src="@drawable/ic_date" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date Format"
                android:textSize="@dimen/sp18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sp20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/IconsMode"
                android:layout_width="@dimen/sp28"
                android:layout_height="@dimen/sp28"
                android:layout_marginEnd="@dimen/sp10"
                android:src="@drawable/ic_clouds" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cloud Cover"
                android:textSize="@dimen/sp18" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sp6"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/IconsMode"
                android:layout_width="@dimen/sp28"
                android:layout_height="@dimen/sp28"
                android:layout_marginEnd="@dimen/sp10"
                android:src="@drawable/ic_dew_point" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dew Point"
                android:textSize="@dimen/sp18" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>